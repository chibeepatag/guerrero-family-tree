  <%= form.label :nicknames, "Nicknames:" %>
  <%= form.text_field :nicknames %> <br/>
  <%= form.label :birth, "Birth:" %>
  <%= form.number_field :birth %> <br/>
  <%= form.label :death, "Death:" %>
  <%= form.number_field :death %> <br/>
  <%= form.label :spouse_id, "Spouse:" %>
  <%= form.collection_select(:spouse_id, @members, :id, :name, { include_blank: true }) %><br/>
  <%= form.label :father_id, "Father:"%>
  <%= form.collection_select(:father_id, @members, :id, :name, { include_blank: true }) %><br/>
  <%= form.label :mother_id, "Mother:"%>
  <%= form.collection_select(:mother_id, @members, :id, :name, { include_blank: true }) %><br/> 
   <br/>
  <div>
    <%= form.submit %>
  </div>
