<div class="content-wrapper">
  <div class="container-xxl flex-grow-1 container-p-y">
<h4 class="py-3 mb-4"><span class="text-muted fw-light"><%=Rails.configuration.family_name%> /</span> Family Members</h4>
<div class="row">
  <div class="col-md-6">
    <ul class="nav nav-pills flex-column flex-md-row mb-3">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Tree", tree_path, class: nav_classes('custom') %>
      </li>
      <li class="nav-item">
        <%= link_to "Members", members_path, class: nav_classes('index') %>
      </li>
      <li class="nav-item">
        <%= link_to "New Member", new_member_path, class: nav_classes('new') %>
      </li>
    </ul>
  </div>
</div>
<div class="container" data-controller="custom">
  <div class="row"></div>
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Tree By Branch</h5>
          <p class="card-text">            
            <%= select(:member, :branch, options_for_select([['Luis', 'Luis'], ['Alfredo', 'Alfredo'], ['Jose', 'Jose'], ['Fernando', 'Fernando'], ['Manuel', 'Manuel'], ['Rosa', 'Rosa']]), {}, class: "form-select", "data-custom-target" =>"branch") %>
          </p>
        </div>
        <div class="card-footer text-end">
          <a href="#" class="btn btn-primary" id="gen_branch" data-action="click->custom#treeByBranch">Generate</a>
        </div>
      </div>      
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Tree by Generation</h5>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="head" class="col-form-label">Head</label>
              </div>
              <div class="col">
                <input type="text" id="head" class="form-control"><input type="hidden" id="member_id"/>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <label for="generation_count" class="col-form-label">Generation Count</label>
              </div>
              <div class="col">
                <input type="number" id="generation_count" class="form-control">                
              </div>
            </div>
        </div>
        <div class="card-footer text-end">
          <a href="#" class="btn btn-primary">Generate</a>
        </div>
      </div>      
    </div>
  </div>
</div>
</div>
</div>